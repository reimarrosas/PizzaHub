<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ph_logo">
        <item name="android:textSize">64sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:drawableLeft">@drawable/pizza_slice</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:text">@string/ph_name</item>
    </style>

    <style name="title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="fab_main">
        <item name="android:src">@drawable/ic_plus</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="fab_button">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="input_text">
        <item name="android:background">@color/light</item>
        <item name="android:paddingStart">12sp</item>
        <item name="android:paddingEnd">12sp</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingBottom">8sp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="go_back_link">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">@string/go_back_link</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="section_header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/red</item>
        <item name="android:letterSpacing">0.3</item>
        <item name="android:paddingStart">16sp</item>
        <item name="android:paddingEnd">16sp</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingBottom">8sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>